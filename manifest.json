{
  "name": "TrackHero",
  "version": "1.0.0",
  "description": "Track your progress with ease and get certified.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "TrackHero",
    "default_popup": "popup.html"
  },
  "manifest_version": 3
}
